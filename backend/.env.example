# ========================================
# 伺服器配置
# ========================================
STREAM_DEMO_HOST=127.0.0.1
STREAM_DEMO_PORT=8080
STREAM_DEMO_MODE=debug

# ========================================
# 資料庫配置 (PostgreSQL)
# ========================================
STREAM_DEMO_DB_HOST=localhost
STREAM_DEMO_DB_PORT=5432
STREAM_DEMO_DB_USER=stream_user
STREAM_DEMO_DB_PASSWORD=stream_password
STREAM_DEMO_DB_NAME=stream_demo
STREAM_DEMO_DB_SSL_MODE=disable

# 資料庫連接池配置
STREAM_DEMO_DB_MAX_OPEN_CONNS=25
STREAM_DEMO_DB_MAX_IDLE_CONNS=10
STREAM_DEMO_DB_CONN_MAX_LIFETIME=3600
STREAM_DEMO_DB_CONN_MAX_IDLE_TIME=900

# ========================================
# Redis 配置
# ========================================
STREAM_DEMO_REDIS_HOST=localhost
STREAM_DEMO_REDIS_PORT=6379
STREAM_DEMO_REDIS_PASSWORD=
STREAM_DEMO_REDIS_DB=0

# Redis 連接池配置
STREAM_DEMO_REDIS_MAX_ACTIVE=100
STREAM_DEMO_REDIS_MAX_IDLE=20
STREAM_DEMO_REDIS_IDLE_TIMEOUT=300
STREAM_DEMO_REDIS_CONNECT_TIMEOUT=10
STREAM_DEMO_REDIS_READ_TIMEOUT=30
STREAM_DEMO_REDIS_WRITE_TIMEOUT=30

# ========================================
# 緩存配置
# ========================================
STREAM_DEMO_CACHE_TYPE=redis
STREAM_DEMO_CACHE_DB=1
STREAM_DEMO_CACHE_DEFAULT_EXPIRATION=3600
STREAM_DEMO_CACHE_KEY_PREFIX=cache:

# ========================================
# 訊息佇列配置
# ========================================
STREAM_DEMO_MESSAGING_TYPE=redis
STREAM_DEMO_MESSAGING_DB=2

# ========================================
# JWT 配置
# ========================================
STREAM_DEMO_JWT_SECRET=local_secret
STREAM_DEMO_JWT_EXPIRES_IN=86400

# ========================================
# S3 配置 (MinIO)
# ========================================
STREAM_DEMO_S3_REGION=us-east-1
STREAM_DEMO_S3_BUCKET=stream-demo-videos
STREAM_DEMO_S3_ACCESS_KEY=minioadmin
STREAM_DEMO_S3_SECRET_KEY=minioadmin
STREAM_DEMO_S3_ENDPOINT=http://localhost:9000
STREAM_DEMO_S3_CDN_DOMAIN=

# ========================================
# 轉碼配置
# ========================================
STREAM_DEMO_TRANSCODE_TYPE=ffmpeg
STREAM_DEMO_FFMPEG_ENABLED=true
STREAM_DEMO_FFMPEG_CONTAINER_NAME=stream-demo-transcoder

# AWS MediaConvert (開發環境關閉)
STREAM_DEMO_MEDIACONVERT_ENABLED=false
STREAM_DEMO_MEDIACONVERT_REGION=us-east-1
STREAM_DEMO_MEDIACONVERT_ENDPOINT=
STREAM_DEMO_MEDIACONVERT_ROLE_ARN=
STREAM_DEMO_MEDIACONVERT_OUTPUT_BUCKET=stream-demo-processed

# ========================================
# 影片配置
# ========================================
STREAM_DEMO_VIDEO_MAX_FILE_SIZE=1073741824
STREAM_DEMO_VIDEO_MIN_FILE_SIZE=1048576
STREAM_DEMO_VIDEO_ALLOWED_FORMATS=mp4,avi,mov,mkv,webm

# ========================================
# 直播配置
# ========================================
STREAM_DEMO_LIVE_ENABLED=true
STREAM_DEMO_LIVE_TYPE=local

# 本地直播配置
STREAM_DEMO_LIVE_LOCAL_ENABLED=true
STREAM_DEMO_LIVE_LOCAL_RTMP_SERVER=localhost
STREAM_DEMO_LIVE_LOCAL_RTMP_SERVER_PORT=1935
STREAM_DEMO_LIVE_LOCAL_TRANSCODER_ENABLED=true
STREAM_DEMO_LIVE_LOCAL_HLS_OUTPUT_DIR=/tmp/live
STREAM_DEMO_LIVE_LOCAL_HTTP_PORT=8081

# 雲端直播配置
STREAM_DEMO_LIVE_CLOUD_PROVIDER=aws
STREAM_DEMO_LIVE_CLOUD_RTMP_INGEST_URL=
STREAM_DEMO_LIVE_CLOUD_HLS_PLAYBACK_URL=
STREAM_DEMO_LIVE_API_KEY=
STREAM_DEMO_LIVE_API_SECRET=
STREAM_DEMO_LIVE_CLOUD_TRANSCODE_ENABLED=false

# 混合直播配置
STREAM_DEMO_LIVE_HYBRID_LOCAL_ENABLED=true
STREAM_DEMO_LIVE_HYBRID_CLOUD_ENABLED=false
STREAM_DEMO_LIVE_HYBRID_FALLBACK_TO_LOCAL=true
STREAM_DEMO_LIVE_HYBRID_CLOUD_PROVIDER=aws

# ========================================
# 應用程式環境
# ========================================
APP_ENV=local
DATABASE_TYPE=postgresql 
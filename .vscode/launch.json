{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "🚀 啟動後端 (PostgreSQL)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/backend/main.go",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "APP_ENV": "local",
        "GIN_MODE": "debug",
        "SERVER_PORT": "8080",
        "SERVER_HOST": "127.0.0.1"
      },
      "args": ["-db", "postgresql"],
      "showLog": true,
      "console": "integratedTerminal"
    },
    {
      "name": "🚀 啟動後端 (MySQL)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/backend/main.go",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "APP_ENV": "local",
        "GIN_MODE": "debug",
        "SERVER_PORT": "8080",
        "SERVER_HOST": "127.0.0.1"
      },
      "args": ["-db", "mysql"],
      "showLog": true,
      "console": "integratedTerminal"
    },
    {
      "name": "🚀 啟動後端 (默認配置)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/backend/main.go",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "APP_ENV": "local",
        "GIN_MODE": "debug",
        "SERVER_PORT": "8080",
        "SERVER_HOST": "127.0.0.1",
        "DATABASE_TYPE": "postgresql"
      },
      "args": [],
      "showLog": true,
      "console": "integratedTerminal"
    },
    {
      "name": "🎨 啟動前端 (Vite)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev -- --port 5173 --host 0.0.0.0",
      "cwd": "${workspaceFolder}/frontend",
      "env": {
        "NODE_ENV": "development",
        "VITE_API_BASE_URL": "http://localhost:8080/api",
        "VITE_DEV_PORT": "5173"
      }
    },
    {
      "name": "🧪 後端除錯模式 (PostgreSQL)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/backend/main.go",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "APP_ENV": "local",
        "GIN_MODE": "debug",
        "SERVER_PORT": "8080",
        "SERVER_HOST": "127.0.0.1"
      },
      "args": ["-db", "postgresql"],
      "showLog": true,
      "console": "integratedTerminal",
      "stopOnEntry": false
    },
    {
      "name": "🧪 後端除錯模式 (MySQL)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/backend/main.go",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "APP_ENV": "local",
        "GIN_MODE": "debug",
        "SERVER_PORT": "8080",
        "SERVER_HOST": "127.0.0.1"
      },
      "args": ["-db", "mysql"],
      "showLog": true,
      "console": "integratedTerminal",
      "stopOnEntry": false
    },
    {
      "name": "🧪 運行測試 (PostgreSQL)",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/backend/tests",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "APP_ENV": "test",
        "DATABASE_TYPE": "postgresql"
      },
      "args": ["-v"],
      "showLog": true,
      "console": "integratedTerminal"
    },
    {
      "name": "🧪 運行測試 (MySQL)",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/backend/tests",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "APP_ENV": "test",
        "DATABASE_TYPE": "mysql"
      },
      "args": ["-v"],
      "showLog": true,
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "🎬 啟動串流平台 (前端 + PostgreSQL 後端)",
      "configurations": [
        "🚀 啟動後端 (PostgreSQL)",
        "🎨 啟動前端 (Vite)"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "串流平台",
        "order": 1
      }
    },
    {
      "name": "🎬 啟動串流平台 (前端 + MySQL 後端)",
      "configurations": [
        "🚀 啟動後端 (MySQL)",
        "🎨 啟動前端 (Vite)"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "串流平台",
        "order": 2
      }
    },
    {
      "name": "🧪 多資料庫測試",
      "configurations": [
        "🧪 運行測試 (PostgreSQL)",
        "🧪 運行測試 (MySQL)"
      ],
      "stopAll": false,
      "presentation": {
        "hidden": false,
        "group": "測試",
        "order": 3
      }
    }
  ]
} 
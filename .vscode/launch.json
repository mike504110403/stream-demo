{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "🚀 啟動後端 (Go)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/backend/main.go",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "APP_ENV": "local",
        "GIN_MODE": "debug",
        "SERVER_PORT": "8080",
        "SERVER_HOST": "127.0.0.1"
      },
      "args": [],
      "showLog": true,
      "console": "integratedTerminal"
    },
    {
      "name": "🎨 啟動前端 (Vite)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev -- --port 5173 --host 0.0.0.0",
      "cwd": "${workspaceFolder}/frontend",
      "env": {
        "NODE_ENV": "development",
        "VITE_API_BASE_URL": "http://localhost:8080/api",
        "VITE_DEV_PORT": "5173"
      }
    },
    {
      "name": "🗄️ 初始化資料庫",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/backend/scripts/init-db.go",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "APP_ENV": "local"
      },
      "args": [],
      "showLog": true,
      "console": "integratedTerminal"
    },
    {
      "name": "🔧 資料庫遷移",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/backend/cmd/migrate/main.go",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "APP_ENV": "local"
      },
      "args": ["-action=migrate"],
      "showLog": true,
      "console": "integratedTerminal"
    },
    {
      "name": "🧪 測試配置載入",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/backend/main.go",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "APP_ENV": "local",
        "GIN_MODE": "debug",
        "SERVER_PORT": "8080",
        "SERVER_HOST": "127.0.0.1"
      },
      "args": [],
      "showLog": true,
      "console": "integratedTerminal",
      "stopOnEntry": false
    }
  ],
  "compounds": [
    {
      "name": "🎬 啟動串流平台 (前端+後端)",
      "configurations": [
        "🚀 啟動後端 (Go)",
        "🎨 啟動前端 (Vite)"
      ],
      "stopAll": true,
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 1
      }
    },
    {
      "name": "🔧 完整初始化 (資料庫+遷移+啟動)",
      "configurations": [
        "🗄️ 初始化資料庫",
        "🔧 資料庫遷移"
      ],
      "stopAll": false,
      "presentation": {
        "hidden": false,
        "group": "",
        "order": 2
      }
    }
  ]
} 
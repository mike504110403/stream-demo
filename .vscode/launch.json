{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "🚀 啟動後端 (本地環境)",
      "type": "node-terminal",
      "request": "launch",
      "command": "go run main.go -env local -db postgresql",
      "cwd": "${workspaceFolder}/services/api",
      "presentation": {
        "hidden": false,
        "group": "開發",
        "order": 1
      }
    },
    {
      "name": "🎨 啟動前端 (本地環境)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev -- --port 5173 --host 0.0.0.0",
      "cwd": "${workspaceFolder}/services/frontend",
      "presentation": {
        "hidden": false,
        "group": "開發",
        "order": 2
      }
    },
    {
      "name": "🔧 後端調試模式 (如果 Go 正常)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/services/api",
      "cwd": "${workspaceFolder}/services/api",
      "args": ["-env", "local", "-db", "postgresql"],
      "showLog": false,
      "console": "integratedTerminal",
      "presentation": {
        "hidden": false,
        "group": "開發",
        "order": 3
      },
      "env": {
        "CGO_ENABLED": "0"
      }
    }
  ],
  "compounds": [
    {
      "name": "🚀 F5 一鍵啟動 (本地環境)",
      "configurations": [
        "🚀 啟動後端 (本地環境)",
        "🎨 啟動前端 (本地環境)"
      ],
      "stopAll": true,
      "preLaunchTask": "🔍 快速健康檢查",
      "presentation": {
        "hidden": false,
        "group": "開發",
        "order": 1
      }
    }
  ]
} 
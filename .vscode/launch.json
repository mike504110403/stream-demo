{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "🚀 啟動後端 (PostgreSQL)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/backend/main.go",
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "APP_ENV": "local",
        "GIN_MODE": "debug",
        "SERVER_PORT": "8080",
        "SERVER_HOST": "127.0.0.1",
        "DATABASE_TYPE": "postgresql",
        "FRONTEND_HOST": "host.docker.internal",
        "FRONTEND_PORT": "5173",
        "BACKEND_HOST": "host.docker.internal",
        "BACKEND_PORT": "8080"
      },
      "args": ["-config", "config/config.local.yaml", "-env", "local", "-db", "postgresql"],
      "showLog": true,
      "console": "integratedTerminal",
      "presentation": {
        "hidden": false,
        "group": "開發",
        "order": 1
      }
    },

{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "🚀 啟動後端 (本地環境)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/services/api/main.go",
      "cwd": "${workspaceFolder}/services/api",
      "envFile": "${workspaceFolder}/services/api/.env",
      "args": ["-env", "local", "-db", "postgresql"],
      "showLog": true,
      "console": "integratedTerminal",
      "presentation": {
        "hidden": false,
        "group": "開發",
        "order": 1
      }
    },
    {
      "name": "🎨 啟動前端 (本地環境)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev -- --port 5173 --host 0.0.0.0",
      "cwd": "${workspaceFolder}/services/frontend",
      "envFile": "${workspaceFolder}/services/frontend/.env",
      "presentation": {
        "hidden": false,
        "group": "開發",
        "order": 2
      }
    },
    {
      "name": "🧪 運行後端測試",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/services/api",
      "cwd": "${workspaceFolder}/services/api",
      "envFile": "${workspaceFolder}/services/api/.env",
      "args": ["-v"],
      "showLog": true,
      "console": "integratedTerminal",
      "presentation": {
        "hidden": false,
        "group": "測試",
        "order": 1
      }
    }
  ],
  "compounds": [
    {
      "name": "🚀 F5 一鍵啟動 (本地環境)",
      "configurations": [
        "🚀 啟動後端 (本地環境)",
        "🎨 啟動前端 (本地環境)"
      ],
      "stopAll": true,
      "preLaunchTask": "🎯 智能啟動開發環境",
      "presentation": {
        "hidden": false,
        "group": "開發",
        "order": 1
      }
    }
  ]
} 
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "🔍 快速健康檢查",
      "type": "shell",
      "command": "./deploy/scripts/quick-health-check.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "🎯 啟動周邊服務",
      "type": "shell",
      "command": "./deploy/scripts/docker-manage.sh",
      "args": ["start-dev"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "🚀 完整開發環境設置",
      "type": "shell",
      "command": "./deploy/scripts/docker-manage.sh",
      "args": ["dev"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "🛑 停止所有服務",
      "type": "shell",
      "command": "./deploy/scripts/docker-manage.sh",
      "args": ["stop"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "📊 查看服務狀態",
      "type": "shell",
      "command": "./deploy/scripts/docker-manage.sh",
      "args": ["dev-status"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "🔍 診斷問題",
      "type": "shell",
      "command": "./deploy/scripts/docker-manage.sh",
      "args": ["diagnose"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
} 